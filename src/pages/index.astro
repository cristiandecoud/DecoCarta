---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const img = ["/montanas.jpg","/goku.png"]
---

<Layout title="DecoCarta">
	<main>
		<Card
			img={img}
			title="Goku"
			body=""
		/>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
